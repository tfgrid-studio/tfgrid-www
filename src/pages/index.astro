      <!-- Enterprise -->
      <div class="p-8 bg-gray-900/50 backdrop-blur-sm border border-gray-800 rounded-xl">
        <h3 class="text-xl font-bold mb-2">Enterprise</h3>
        <div class="mb-6">
          <span class="text-4xl font-bold">Custom</span>
        </div>
        <ul class="space-y-3 mb-8 text-gray-400">
          <li class="flex items-center gap-2">
            <svg class="w-5 h-5 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
