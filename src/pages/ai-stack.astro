<style>
	.ai-stack-page {
		--primary: #4F46E5;
		--primary-dark: #4338CA;
		--text: #F9FAFB;
		--text-light: #D1D5DB;
		--bg: #111827;
		--bg-alt: #1F2937;
		--border: #374151;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	/* Hero */
	.hero {
		padding: 8rem 0 6rem;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		color: white;
	}

	.hero-content {
		max-width: 600px;
	}

	.badge {
		display: inline-block;
		padding: 0.5rem 1rem;
		background: rgba(255, 255, 255, 0.2);
		border-radius: 2rem;
		font-size: 0.875rem;
		font-weight: 500;
		margin-bottom: 1rem;
	}

	.hero h1 {
		font-size: 4rem;
		font-weight: 800;
		margin: 0 0 1rem;
		line-height: 1.1;
	}

	.tagline {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		opacity: 0.9;
	}

	.description {
		font-size: 1.125rem;
		opacity: 0.85;
		margin-bottom: 2rem;
	}

	.cta-buttons {
		display: flex;
		gap: 1rem;
		margin-bottom: 3rem;
	}

	.button {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 1rem 2rem;
		border-radius: 0.5rem;
		font-weight: 600;
		text-decoration: none;
		transition: all 0.2s;
	}

	.button.primary {
		background: white;
		color: var(--primary);
	}

	.button.secondary {
		background: rgba(255, 255, 255, 0.2);
		color: white;
		border: 2px solid white;
	}

	.button.large {
		padding: 1.25rem 2.5rem;
		font-size: 1.125rem;
	}

	.stats {
		display: flex;
		gap: 3rem;
	}

	.stat {
		display: flex;
		flex-direction: column;
	}

	.stat strong {
		font-size: 1.5rem;
		margin-bottom: 0.25rem;
	}

	.stat span {
		opacity: 0.75;
		font-size: 0.875rem;
	}

	/* Terminal */
	.terminal-window {
		background: #1e1e1e;
		border-radius: 0.5rem;
		overflow: hidden;
		box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
	}

	.terminal-header {
		background: #323232;
		padding: 0.75rem 1rem;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.dot {
		width: 12px;
		height: 12px;
		border-radius: 50%;
	}

	.dot.red { background: #ff5f56; }
	.dot.yellow { background: #ffbd2e; }
	.dot.green { background: #27c93f; }

	.terminal-header .title {
		margin-left: auto;
		color: #999;
		font-size: 0.875rem;
	}

	.terminal-content {
		padding: 1.5rem;
		font-family: 'Roboto Mono', monospace;
		font-size: 0.9rem;
		line-height: 1.6;
	}

	.prompt {
		color: #4EC9B0;
	}

	.output {
		color: #CE9178;
	}

	/* Features */
	.features {
		padding: 6rem 0;
	}

	.features h2 {
		text-align: center;
		font-size: 2.5rem;
		margin-bottom: 3rem;
		color: var(--text);
	}

	.features-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.feature {
		text-align: center;
		padding: 2rem;
	}

	.feature-icon {
		font-size: 3rem;
		margin-bottom: 1rem;
	}

	.feature h3 {
		margin-bottom: 1rem;
		color: var(--text);
	}

	.feature p {
		color: var(--text-light);
	}

	/* How It Works */
	.how-it-works {
		padding: 6rem 0;
		background: var(--bg-alt);
	}

	.how-it-works h2 {
		text-align: center;
		font-size: 2.5rem;
		margin-bottom: 4rem;
		color: var(--text);
	}

	.steps {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}

	.step {
		text-align: center;
		padding: 2rem;
		background: var(--bg);
		border-radius: 0.5rem;
		border: 1px solid var(--border);
	}

	.step h3 {
		color: var(--text);
		margin-bottom: 1rem;
	}

	.step p {
		color: var(--text-light);
		margin-bottom: 1rem;
	}

	.step-number {
		width: 50px;
		height: 50px;
		background: var(--primary);
		color: white;
		border-radius: 50%;
		display: flex;
		align-items: center;
